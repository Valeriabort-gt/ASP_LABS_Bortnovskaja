@{
    ViewData["Message"] = "SignIn Page";
}

<style>
    h1{
        margin-bottom: 0;
    }
    form {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        row-gap: 20px;
        justify-content: center;
        align-items: center;
    }
    input {
        border: 1px solid black;
    }
    button {
        width: 250px;
        height: 30px;
        border-radius: 15px;
        background-color: #F7EF79;
        cursor: pointer;
        transition: 0.3s;
        border: none;
    }
</style>

<form method="post" action="/authenfication/SignIn">
    <h1>Вход</h1>
    <label>Логин: <input name="Login"/></label>
    <label>Пароль: <input type="password" name="Password"/></label>
    <button type="submit">Войти</button>
</form>